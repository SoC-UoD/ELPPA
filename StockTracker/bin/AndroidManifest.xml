<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.elppa.stocktracker"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="15" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Home"
            android:label="@string/title_activity_home" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
         <activity android:name=".portfolio" android:label="portfolio">
            <intent-filter >
                <action android:name="com.elppa.portfolio" />
                <category android:name="android.intent.category.DEFAULT" />
                    
            </intent-filter>
        </activity> 
        <activity android:name=".total_value" android:label="total value">
            <intent-filter >
                <action android:name="com.elppa.total_value" />
                <category android:name="android.intent.category.DEFAULT" />
                    
            </intent-filter>
        </activity>
    </application>

</manifest>